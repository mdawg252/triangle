#!/usr/bin/perl -w

for(@ARGV) {
  if($_ eq '--fill' or $_ eq '-f') {
    $fill = '*';
  } else {
    $size = $_;
  }
}

$fill = " ";
if($size =~ /\D+/) {
  print "Enter a number!\n";
  exit 0;
}
elsif(!($size % 2)) {
  $size--;
  print "your number has been demoted to $size because it is an even number.\n";
}
for($i=0; ($size-3)/2+1 >= $i; $i++) {
  for($j=0; ($size-3)/2-$i >= $j; $j++) {
    print " ";
  }
if($i==0) {
  print "*\n";
}
else {
  if($i == ($size-3)/2+1) {
    $fill = "*";
  }
  print "*";
  for($j=0; 2*$i-2 >= $j; $j++) {
    print $fill;
  }
  print "*\n";
}
}

    
